{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/minishell", // Assicurati che il percorso sia corretto
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // Assicurati che il percorso sia corretto
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "cwd": "${workspaceFolder}" // Aggiungi la directory di lavoro
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/minishell", // Assicurati che il percorso sia corretto
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // Assicurati che il percorso sia corretto
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}