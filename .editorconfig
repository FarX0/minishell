[{*.c,*.h}]
indent_style = tab
indent_size = 4
insert_final_newline = true
ij_any_while_on_new_line = true
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 80
ij_any_align_group_field_declarations = true
ij_c_block_brace_placement = next_line
ij_c_else_on_new_line = true
ij_c_catch_on_new_line = true
ij_any_array_initializer_right_brace_on_new_line = true
ij_any_call_parameters_new_line_after_left_paren = true
ij_any_call_parameters_right_paren_on_new_line = true
ij_any_block_brace_style = next_line
ij_any_spaces_around_assignment_operators = true
ij_any_spaces_around_equality_operators = true
ij_any_spaces_around_bitwise_operators = true
